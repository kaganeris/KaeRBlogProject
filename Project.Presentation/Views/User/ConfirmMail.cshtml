@using Project.Application.Models.DTOs.ConfirmMailDTOs;
@{
    Layout = null;
}
@model ConfirmMailDTO

<!doctype html>
<html lang="en">
<head>
    <title>ConfirmMail</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/loginTemplate/css/style.css">

</head>
<body class="img js-fullheight" style="background-image: url(/loginTemplate/images/bg.jpg);">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center">
                            Mail Adresini Onayla
                        </h3>
                        <form asp-action="ConfirmMail" asp-controller="User" method="post" class="signin-form">
                            <div class="form-group">
                                <h2>Mail Adresiniz: @ViewBag.Email</h2>
                                <input asp-for="Email" type="hidden" class="form-control" placeholder="Email" required>
                            </div>
                            <div class="form-group">
                                <input asp-for="ConfirmCode" type="number" class="form-control" placeholder="Onay Kodu" required>
                            </div>
                            <div class="form-group">
                                <input type="submit" class="form-control btn btn-primary submit px-3" value="Hesabı Aktifleştir" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/loginTemplate/js/jquery.min.js"></script>
    <script src="~/loginTemplate/js/popper.js"></script>
    <script src="~/loginTemplate/js/bootstrap.min.js"></script>
    <script src="~/loginTemplate/js/main.js"></script>

</body>
</html>


