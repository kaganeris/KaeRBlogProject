@using Project.Application.Models.DTOs.AppUserDTOs;
@{
    Layout = null;
}
@model RegisterDTO

<!doctype html>
<html lang="en">
<head>
    <title>Register</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/loginTemplate/css/style.css">

</head>
<body class="img js-fullheight" style="background-image: url(/loginTemplate/images/bg.jpg);">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">KaeR Blog</h2>
                    <h3 class="heading-section">Kayıt Ol</h3>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center">
                            <a asp-action="Login" asp-controller="User">Hesabın Var Mı?</a>
                        </h3>
                        <form asp-action="Register" asp-controller="User" method="post" class="signin-form">
                            <div class="form-group">
                                <input asp-for="UserName" type="text" class="form-control" placeholder="Kullanıcı Adı" required>
                            </div>
                            <div class="form-group">
                                <input asp-for="Email" type="email" class="form-control" placeholder="Email Adresi" required>
                            </div>
                            <div class="form-group">
                                <input asp-for="Password" id="password-field" type="password" class="form-control" placeholder="Şifre" required>
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="ConfirmPassword" id="password-field" type="password" class="form-control" placeholder="Şifre Tekrarı" required>
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" class="form-control btn btn-primary submit px-3" value="Kayıt Ol"/>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/loginTemplate/js/jquery.min.js"></script>
    <script src="~/loginTemplate/js/popper.js"></script>
    <script src="~/loginTemplate/js/bootstrap.min.js"></script>
    <script src="~/loginTemplate/js/main.js"></script>

</body>
</html>


