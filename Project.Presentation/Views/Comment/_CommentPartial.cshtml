@using Project.Application.Models.DTOs.CommentDTOs;
@model CommentDTO

<div class="comment d-flex mb-4">
    <div class="flex-shrink-0">
        <div class="avatar avatar-sm rounded-circle">
            <img class="avatar-img" src="~/mainTemplate/assets/img/person-5.jpg" alt="" class="img-fluid">
        </div>
    </div>
    <div class="flex-grow-1 ms-2 ms-sm-3">
        <div class="comment-meta d-flex align-items-baseline">
            <h6 class="me-2">@Model.AppUserFullName</h6>
            <span class="text-muted">@DateTime.Compare(DateTime.Now,Model.CreatedDate)g</span>
        </div>
        <div class="comment-body">
            @Model.Content
        </div>
    </div>
</div>


