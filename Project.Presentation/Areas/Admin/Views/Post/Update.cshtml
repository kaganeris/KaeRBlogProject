@using Project.Application.Models.DTOs.PostDTOs

@{
    ViewData["Title"] = "Create";
}
@model UpdatePostDTO
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Makale Oluştur</h4>
        <form class="forms-sample" asp-action="Update" asp-controller="Post" asp-area="Admin" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <input asp-for="UploadPath" type="file" class="form-control">
            </div>
            <div class="form-group">
                <input asp-for="Title" type="text" class="form-control" placeholder="Makale Başlığı" required>
            </div>
            <div class="form-group">
                <textarea asp-for="Content" id="summernote" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <select asp-for="GenreID" class="form-select">
                    @foreach (var genre in Model.Genres)
                    {
                        <option value="@genre.Id">@genre.Name</option>
                    }
                </select>
            </div>
            <div asp-validation-summary="All" class="bg-red text-white"></div>
            <button type="submit" class="btn btn-primary me-2">Oluştur</button>
        </form>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
<script>
    $('#summernote').summernote({
        placeholder: 'Makale İçeriği',
        tabsize: 2,
        height: 120,
        toolbar: [
            ['style', ['style']],
            ['font', ['bold', 'underline', 'clear']],
            ['color', ['color']],
            ['para', ['ul', 'ol', 'paragraph']],
            ['table', ['table']],
            ['insert', ['link', 'picture', 'video']],
            ['view', ['fullscreen', 'codeview', 'help']]
        ],
        callbacks: {
            onInit: function () {
                $('.note-editable').css('color', 'black'); // Set the text color to white
            }
        }
    });
</script>