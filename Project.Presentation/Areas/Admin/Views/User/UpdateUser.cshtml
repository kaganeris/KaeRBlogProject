@using Project.Application.Models.DTOs.AppUserDTOs
@using Project.Domain.Enums

@{
    ViewData["Title"] = "UpdateUser";
}

@model UpdateUserDetailDTO

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Kullanıcı Güncelle</h4>
        <form class="forms-sample" asp-action="UpdateUser" asp-controller="User" asp-area="Admin" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" style="background-color: red; color: white; text-align: center;"></div>
            <div class="form-group">
                <img src="@Model.ImagePath"/>
                <label for="exampleFormControlFile1">Profil Fotoğrafı</label>
                <input asp-for="UploadPath" type="file" class="form-control-file" id="exampleFormControlFile1">
            </div>
            <div class="form-group">
                <label class="form-label">Ad</label>
                <input asp-for="FirstName" type="text" class="form-control" placeholder="Ad" value="@Model.FirstName">
            </div>
            <div class="form-group">
                <label class="form-label">Soyad</label>
                <input asp-for="LastName" type="text" class="form-control" placeholder="Soyad" value="@Model.LastName">
            </div>
            <div class="form-group">
                <label class="form-label">Hakkında</label>
                <textarea asp-for="About" type="text-area" class="form-control" placeholder="Hakkımda" required>@Model.About</textarea>
            </div>
            <div class="form-group">
                <label class="form-label">Doğum Tarihi</label>
                <input asp-for="BirthDate" type="date" class="form-control" value="@Model.BirthDate" placeholder="Doğum Tarihi">
            </div>
            <div class="form-group">
                <label class="form-label">Cinsiyet</label>
                <select asp-for="Gender" class="form-select">
                    <option value="@Gender.Male">Erkek</option>
                    <option value="@Gender.Female">Kadın</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary submit px-3" value="Güncelle" />
            </div>
        </form>
    </div>
</div>

